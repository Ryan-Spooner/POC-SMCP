# POC-SMCP Environment Variables Template
# Copy this file to .env.local for local development

# Environment Configuration
ENVIRONMENT=development
LOG_LEVEL=debug

# Cloudflare Account Configuration
CLOUDFLARE_ACCOUNT_ID=your-account-id-here
CLOUDFLARE_API_TOKEN=your-api-token-here

# OAuth 2.1 Configuration
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret
OAUTH_ISSUER_URL=https://your-oauth-provider.com

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_ISSUER=poc-smcp
JWT_AUDIENCE=mcp-servers

# API Configuration
API_BASE_URL=https://your-worker-domain.workers.dev
API_VERSION=v1

# Security Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
MAX_REQUEST_SIZE_MB=1
SESSION_TIMEOUT_MINUTES=60

# Development Configuration
DEV_PORT=8787
DEV_HOST=127.0.0.1

# Testing Configuration (for CI/CD)
TEST_TENANT_ID=test-tenant
TEST_API_KEY=smcp_test-tenant_0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
